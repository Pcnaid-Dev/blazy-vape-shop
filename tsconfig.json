{
  "compilerOptions": {
    // Keep target as es2020, suitable for modern environments like Cloudflare
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Keep this, good for edge runtimes
    "resolveJsonModule": true,
    "isolatedModules": true, // Add this - ensures files can be transpiled independently
    "jsx": "preserve",
    "incremental": true,
    "plugins": [ // Add this section for Next.js specific features
      {
        "name": "next"
      }
    ],
    "paths": { // Add this for common path aliases like @/*
      "@/*": ["./*"]
    },
    "types": ["node"] // Keep your explicit node types
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts", // Add this to include types generated by Next.js (e.g., for App Router)
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
