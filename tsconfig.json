{
  "compilerOptions": {
    // ECMAScript target that Cloudflare’s build understands
    "target": "es2020",
    // Built‑in lib definitions to load
    "lib": ["dom", "dom.iterable", "esnext"],
    // ----------------------------------------------------------------------------
    // Safety & DX
    "strict": true,                   // enable all strict type‑checking
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,             // cuts build time; Next handles libs
    "noEmit": true,                   // Next transpiles behind the scenes
    // ----------------------------------------------------------------------------
    // Module settings
    "module": "esnext",
    "moduleResolution": "bundler",    // plays nicest with Edge runtime
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // ----------------------------------------------------------------------------
    // JSX handling
    "jsx": "preserve",                // Next replaces this with its SWC pipeline
    // ----------------------------------------------------------------------------
    // Misc
    "allowJs": true,                  // lets you co‑exist TS and plain JS
    "incremental": true,              // speeds up local rebuilds
    "types": ["node"]                 // Node globals when you need them
  },

  "include": [
    "next-env.d.ts",  // auto‑generated by Next; don’t delete
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": ["node_modules"]
}
